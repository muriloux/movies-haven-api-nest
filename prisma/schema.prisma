generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma-client-js"
}

//there is no migrate for mongodb
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Movie {
  id        Int      @id @map("_id")
  title     String   @unique
  createdAt DateTime @default(now())
}

model Curator {
  id        Int     @id @map("_id")
  name      String  @unique
}